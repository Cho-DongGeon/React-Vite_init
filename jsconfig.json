{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "**/*.css", "**/*.module.css", "global.d.ts"],
    "exclude": ["node_modules", "dist", "build"]
}
